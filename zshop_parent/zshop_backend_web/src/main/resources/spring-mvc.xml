<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:annotation-driven></mvc:annotation-driven>
	
	<!-- 定义视图解析器 -->
	<mvc:view-resolvers>
		<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
			<property name="prefix" value="/WEB-INF/views/"></property>
			<property name="suffix" value=".jsp"></property>
		</bean>
	</mvc:view-resolvers>
	
	<!-- 静态资源映射 -->
	<mvc:resources location="css/**" mapping="/WEB-INF/css/"></mvc:resources>
	<mvc:resources location="js/**" mapping="/WEB-INF/js/"></mvc:resources>
	<mvc:resources location="fonts/**" mapping="/WEN-INF/fonts/"></mvc:resources>
	<mvc:resources location="iconfont/**" mapping="/WEB-INF/iconfont/"></mvc:resources>
	<mvc:resources location="/images/**" mapping="/WEB-INF/images/"></mvc:resources>
	
	<!-- 直接访问路径 -->
	<mvc:view-controller path="/showLogin" view-name="login"/>

</beans>
